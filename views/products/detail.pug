extends ../layouts/common
block header
    nav(style="background:white !important").navbar.navbar-expand-lg.navbar-light.bg-light
        .navbar-brand(href='#',style='width:25% !important;height:80%')
            img.img-pro.card-img-top(src='../imgs/logo.png',style='width:50%;height:25%')
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                li.nav-item.active
                    a.nav-link(href='/').pr-5
                        | Home 
                        span.sr-only (current)
                li.dropdown.nav-item.active
                    a.nav-link(href='#').pr-5
                        | Category 
                        span.sr-only (current)
                    .dropdown-content
                        a(href='#') Link 1
                        a(href='#') Link 2
                        a(href='#') Link 3
                li.nav-item.active
                    a.nav-link(href='#').pr-5
                        | Contact
                        span.sr-only (current)
            div(style='width:6% !important')   
                if user==null
                    a(href='/user/login')               
                        img.img-pro.card-img-top(src=''+user.photos,style='width:50%;height:6%')
                else 
                    a(href='/user/login')               
                        img.img-pro(src=''+user.photos,style='width:50%;height:6%; border: 1px;border-radius: 5px;')  
            div(style='width:6% !important')   
                a(href='/user/login')               
                    img.img-pro.card-img-top(src='../imgs/cart.png',style='width:50%;height:6%')                    

            form.form-inline.my-2.my-lg-0
                input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
                button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
block content
    .w-75.p-3.container
        table#cart.table.table-hover.table-condensed
            thead
                tr
                    th(style='width:50%') Product
                    th(style='width:10%') Price
                    th(style='width:8%') Quantity
                    th.text-center(style='width:22%') Total Count
                    th.text-center(style='width:22%') Subtotal
                    th(style='width:10%')
            tbody
                tr
                    td(data-th='Product')
                        .row
                            .col-sm-2.hidden-xs
                                img.detail-pro.img-responsive(src='../'+detail.path,style="width:400px,height:700px")
                        .col-sm-10
                            h4.nomargin #{detail.name}
                            p #{detail.detail}
                    td.pt-3(data-th='Price') $#{detail.price}
                    td(data-th='Quantity')
                        input.form-control.text-center(type='number', value='1')
                    td.pt-3.text-center(data-th='Subtotal') #{detail.count}
                    td(data-th='TotalCount')
                        input.form-control.text-center(type='number', value='1')
                    td.pt-3.text-center(data-th='Subtotal') $#{detail.price}
                    form(action="/user/cart",method="POST")
                        input(type="hidden", value=detail,name='detailPro')
                        td.actions(data-th='')
                            button.btn.btn-info.btn-sm(type='submit')
                                i.fa.fa-refresh
                            button.btn.btn-danger.btn-sm
                                i.fa.fa-trash-o
            tfoot
                tr.visible-xs
                    td.text-center
                        strong Total 1.99
                tr
                    td
                        a(href='/user/cart')
                            button.btn-back.btn.btn-primary(type='button') Primary
                    td.hidden-xs(colspan='4')
                    td.hidden-xs.text-center
                        strong Total $150.00
                    td
                        button.w-100.btn.btn-primary(type='button') Primary
block footer    
    include ../layouts/footer