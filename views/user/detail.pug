extends ../layouts/common
block header
    include ../layouts/header
block content
    .w-75.p-3.container
        .row
            .col-sm-10
                h1 #{user.displayName}
                img.w-25.h-25.avatar.img-circle.img-thumbnail(src=''+user.photos, alt='avatar') 

        form#registrationForm.form(action="/user/",method="POST")
            .form-group
                .col-xs-6
                    label(for='first_name')
                        h4 Name
                    input#first_name.form-control(type='text', name='name', placeholder='first name',value=''+user.displayName,required, title='enter your first name if any.')
            .form-group
                .col-xs-6
                    label(for='phone')
                        h4 Phone
                    input#phone.form-control(type='number', name='phone', placeholder='enter phone',value=''+user.phone,required, title='enter your phone number if any.')
            .form-group
                .col-xs-6
                    label(for='email')
                        h4 Location
                    input#location.form-control(type='text', name='location',value=''+user.address, placeholder='somewhere',required, title='enter a location')
            .form-group
                .col-xs-12
                    br
                    button.btn.btn-lg.btn-success(type='submit')
                        i.glyphicon.glyphicon-ok-sign
                        |  Save
block footer    
    include ../layouts/footer